<h1>Add User</h1>

{{#if error}} <span>{{error}}</span> {{/if}}



<form method="POST" action="/user/add">
    <div class="form-group">
        <label>ID</label>
        <input type="text" name="id" class="form-control" placeholder="Add ID">
    </div>

    <div class="form-group">
        <label>First Name</label>
        <input type="text" name="first_name" class="form-control" placeholder="Add First Name">
    </div>

     <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="last_name" class="form-control" placeholder="Add Last Name">
    </div>

     <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" class="form-control" placeholder="Add Email">
    </div>

     <div class="form-group">
        <label>Phone</label>
        <input type="text" name="phone" class="form-control" placeholder="Add Phone">
    </div>


    <input type="submit" class="btn btn-dark" value="Save">
</form>

